<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pjcribbin.healthtracker.Home">

    <TextView
        android:id="@+id/step_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAllCaps="true"
        android:textSize="75sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STEPS TODAY"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/track_workout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Workout" />

    <TextView
        android:id="@+id/calories_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAllCaps="true"
        android:textSize="75sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALORIES TODAY"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/track_meal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Meal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_history_button"
            android:onClick="displayHistory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="View History"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/view_stats_button"
            android:onClick="displayStats"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="View Stats"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
