<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pjcribbin.healthtracker.AddNewMeal">


    <EditText
        android:id="@+id/meal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of meal" />

    <Button
        android:text="Add Food 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_food_1"
        android:onClick="displayAddFood"/>

    <Button
        android:text="Add Food 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_food_2"
        android:onClick="displayAddFood"/>

    <Button
        android:text="Add Food 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_food_3"
        android:onClick="displayAddFood"/>
</LinearLayout>